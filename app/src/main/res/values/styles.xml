<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_light</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/main_light</item>
    </style>

    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="ProgressDialog" parent="@style/Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="StarTextView">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">*</item>
    </style>

    <style name="PopMenuAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="LineGreyHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/md_grey_400</item>
    </style>

    <style name="AllLineVertical">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/md_grey_300</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="MainInputText" parent="EditTextStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="InputText" parent="EditTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">300dip</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">60dp</item>

    </style>

    <style name="TitleTextView">
        <item name="android:textColor">@color/main_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="TitleTextView2">
        <item name="android:textColor">@color/main_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TipTextView">
        <item name="android:textColor">@color/main_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TipTextView_Smarl">
        <item name="android:textColor">@color/main_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContentTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CommTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">23dp</item>
    </style>

    <style name="ItemTextView" parent="CommTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="ItemMain" parent="ItemTextView">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="ItemLabTextView" parent="ItemTextView">
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="BlueItemLabTextView" parent="ItemLabTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_light</item>
    </style>

    <style name="ItemLayoutEdit" parent="CommTextView">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonItemLayoutEdit" parent="CommTextView">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemEditText" parent="ItemTextView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/bg_edit</item>
    </style>

    <style name="ItemLabEditText" parent="ItemEditText">
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemRecordTextView">
        <item name="android:gravity">center_vertical|left</item>
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">23dp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:textColor">@drawable/rb_textcolor</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dip</item>
    </style>


    <style name="FullTextTip">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/main_light</item>
    </style>

    <style name="MD">
        <item name="animationVelocity">5</item>
        <item name="measureFactor">1.6</item>
        <item name="offDrawable">@drawable/md_back_off</item>
        <item name="onDrawable">@drawable/md_back_on</item>
        <item name="thumb_margin">0dp</item>
    </style>

    <style name="SwitchButtonStyle" parent="MD">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="thumbDrawable">@drawable/md_thumb</item>
    </style>

    <style name="HaveSwitchButtonStyle" parent="MD">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="thumbDrawable">@drawable/md_have_thumb</item>
    </style>

    <style name="PastDialogListTextHeader">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="PastDialogListText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="BottomBtn">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/btn_common_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="Style_Item_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Style_Item_Item_Layout_Center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItemEditLayout">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ChangeButton">
        <item name="android:background">@drawable/md_checked</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
