<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ChangeButton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_now1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_line"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemheight"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="血糖升高" />

                        <LinearLayout
                            android:id="@+id/ll_personal_xy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/tv_main_nian"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_edit"
                                android:gravity="center"
                                android:inputType="number"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/headerTextSize" />

                            <TextView
                                android:id="@+id/tv_main_nian_tip"
                                style="@style/TitleTextView"
                                android:layout_marginLeft="10dip"
                                android:text="年/月" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="心慌/出汗/饥饿感" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.ChangeButton
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:background="@drawable/md_checked"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/titleTextSize"
                                ChangeButton:offText="无"
                                ChangeButton:onText="有" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/LineHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemheight"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="视物模糊" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.ChangeButton
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:background="@drawable/md_checked"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/titleTextSize"
                                ChangeButton:offText="无"
                                ChangeButton:onText="有" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="泡沫尿" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.ChangeButton
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:background="@drawable/md_checked"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/titleTextSize"
                                ChangeButton:offText="无"
                                ChangeButton:onText="有" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/LineHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemheight"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="肢端麻木" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.ChangeButton
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:background="@drawable/md_checked"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/titleTextSize"
                                ChangeButton:offText="无"
                                ChangeButton:onText="有" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="间歇性跛行" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.ChangeButton
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:background="@drawable/md_checked"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/titleTextSize"
                                ChangeButton:offText="无"
                                ChangeButton:onText="有" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/LineHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemheight"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="酮症/酮症酸中毒" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.ChangeButton
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:background="@drawable/md_checked"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/titleTextSize"
                                ChangeButton:offText="无"
                                ChangeButton:onText="有" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="低血糖/低血糖昏迷" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.ChangeButton
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:background="@drawable/md_checked"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/titleTextSize"
                                ChangeButton:offText="无"
                                ChangeButton:onText="有" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/LineHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemheight"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="睡眠" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                                android:id="@+id/ns_recordnow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:gravity="center"
                                android:textSize="@dimen/headerTextSize" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ItemRecordTextView"
                            android:layout_weight="1"
                            android:text="大便" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal">

                            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:textSize="@dimen/headerTextSize" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_now2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_line"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/header_recordnow2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/ItemRecordTextView"
                        android:layout_weight="1"
                        android:text="空腹血糖" />

                    <LinearLayout
                        style="@style/ItemEditLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            style="@style/ItemLayoutEdit"
                            android:layout_weight="2" />

                        <TextView
                            style="@style/ItemMain"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:text="mmol/L" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/LineHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/ItemRecordTextView"
                        android:layout_weight="1"
                        android:text="餐后2小时血糖" />


                    <LinearLayout
                        style="@style/ItemEditLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            style="@style/ItemLayoutEdit"
                            android:layout_weight="2" />

                        <TextView
                            style="@style/ItemMain"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:text="mmol/L" />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/LineHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/ItemRecordTextView"
                        android:layout_weight="1"
                        android:text="糖化血红蛋白(HbA1c)" />


                    <LinearLayout
                        style="@style/ItemEditLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            style="@style/ItemLayoutEdit"
                            android:layout_weight="2" />

                        <TextView
                            style="@style/ItemMain"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:text="%" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_now3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_line"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/header_recordnow3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="降糖药" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="50mg/片(粒)" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="早餐前30分钟" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="体重增加" />

        </LinearLayout>

        <View style="@style/LineHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="降糖药" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="50mg/片(粒)" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="早餐前30分钟" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="体重增加" />

        </LinearLayout>

        <View style="@style/LineHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="降糖药" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="50mg/片(粒)" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="早餐前30分钟" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="体重增加" />

        </LinearLayout>

        <View style="@style/LineHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="降糖药" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="50mg/片(粒)" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="早餐前30分钟" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="体重增加" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:id="@+id/spinner_now1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/headerTextSize" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:id="@+id/spinner_now2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:textSize="@dimen/headerTextSize" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:id="@+id/spinner_now3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/headerTextSize" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="规格"
                android:textSize="@dimen/headerTextSize" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="用量"
                android:textSize="@dimen/headerTextSize" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="服用方法"
                android:textSize="@dimen/headerTextSize" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>