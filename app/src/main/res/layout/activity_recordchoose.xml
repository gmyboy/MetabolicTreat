<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="170dp"
        android:src="@mipmap/logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="170dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_choose_name_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="20dip"
            android:layout_alignParentLeft="true"
            android:text="姓名:" />

        <EditText
            android:id="@+id/et_choose_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_choose_name_tip"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="张三"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_choose_sex_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@+id/et_choose_name"
            android:text="性别:" />

        <TextView
            android:id="@+id/tv_choose_sex"
            style="@style/TitleTextView"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_choose_sex_tip"
            android:text="男" />

        <TextView
            android:id="@+id/tv_choose_birthday_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@+id/tv_choose_sex"
            android:text="出生年月:" />

        <TextView
            android:id="@+id/tv_choose_birthday"
            style="@style/TitleTextView"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_choose_birthday_tip"
            android:text="2015.02" />


    </RelativeLayout>


    <include layout="@layout/header_recordchoose" />

    <ListView
        android:id="@+id/lv_recordchoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="170dp" />

</LinearLayout>
