<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ChangeButton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_frag_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/content_margin_bottom"
        android:background="@color/grey_line"
        android:orientation="vertical">

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="甲状腺超声" />

            <LinearLayout
                style="@style/input_layout_in_null"
                android:layout_weight="2.5" />

            <LinearLayout
                style="@style/input_layout_in"
                android:layout_weight="2.5">

                <TextView
                    android:id="@+id/et_aux2_date_1"
                    style="@style/input_txt"
                    android:hint="@string/hint_date" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineGreyHorizontal" />

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="甲状腺大小:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/horizontal_lay"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="7.5">

                <TextView
                    style="@style/input_txt_title"
                    android:text="左" />

                <LinearLayout style="@style/input_layout_in">

                    <TextView
                        android:id="@+id/et_aux2_1"
                        style="@style/input_txt" />

                    <TextView
                        style="@style/input_txt_dost"
                        android:text="mm" />
                </LinearLayout>

                <TextView
                    style="@style/input_txt_title"
                    android:text="右" />

                <LinearLayout style="@style/input_layout_in">

                    <TextView
                        android:id="@+id/et_aux2_2"
                        style="@style/input_txt" />

                    <TextView
                        style="@style/input_txt_dost"
                        android:text="mm" />
                </LinearLayout>

                <TextView
                    style="@style/input_txt_title"
                    android:text="峡部" />

                <LinearLayout style="@style/input_layout_in_nodimen">

                    <TextView
                        android:id="@+id/et_aux2_3"
                        style="@style/input_txt" />

                    <TextView
                        style="@style/input_txt_dost"
                        android:text="mm" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineGreyHorizontal" />

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="结节大小:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/horizontal_lay"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="7.5">

                <TextView
                    style="@style/input_txt_title"
                    android:text="左最大" />

                <LinearLayout style="@style/input_layout_in">

                    <TextView
                        android:id="@+id/et_aux2_4"
                        style="@style/input_txt" />

                    <TextView
                        style="@style/input_txt_dost"
                        android:text="mm" />
                </LinearLayout>

                <TextView
                    style="@style/input_txt_title"
                    android:text="钙化" />

                <LinearLayout style="@style/input_layout_in_null">

                    <com.shwootide.metabolictreat.widget.ChangeButton
                        android:id="@+id/cb_aux2_5"
                        style="@style/ChangeButton"
                        ChangeButton:offText="无"
                        ChangeButton:onText="有" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_layout_in_null"
                    android:layout_weight="2.5" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="结节大小"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/horizontal_lay"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="7.5">

                <TextView
                    style="@style/input_txt_title"
                    android:text="右最大" />

                <LinearLayout style="@style/input_layout_in">

                    <TextView
                        android:id="@+id/et_aux2_7"
                        style="@style/input_txt" />

                    <TextView
                        style="@style/input_txt_dost"
                        android:text="mm" />
                </LinearLayout>

                <TextView
                    style="@style/input_txt_title"
                    android:text="钙化" />

                <LinearLayout style="@style/input_layout_in_null">

                    <com.shwootide.metabolictreat.widget.ChangeButton
                        android:id="@+id/cb_aux2_8"
                        style="@style/ChangeButton"
                        ChangeButton:offText="无"
                        ChangeButton:onText="有" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_layout_in_null"
                    android:layout_weight="2.5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>