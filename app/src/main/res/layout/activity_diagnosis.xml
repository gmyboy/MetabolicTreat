<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="170dp"
        android:src="@mipmap/logo" />

    <View
        android:id="@+id/v_record"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/iv_record"
        android:background="@color/main_dark" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/v_record"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/btn_newrecord"
        android:text="诊断"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.shwootide.metabolictreat.widget.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@+id/btn_record"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />
</RelativeLayout>