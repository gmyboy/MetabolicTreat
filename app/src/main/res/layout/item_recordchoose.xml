<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_diagnosistime"
        style="@style/ItemMain"
        android:layout_weight="4"
        android:text="@string/header_recordchoose_Diagnosistime"
        android:textSize="@dimen/content_text_sm" />

    <View style="@style/LineVertical" />

    <TextView
        android:id="@+id/tv_item_diagnosiscount"
        style="@style/ItemMain"
        android:layout_weight="1.8"
        android:text="@string/header_recordchoose_Diagnosiscount" />

    <View style="@style/LineVertical" />

    <TextView
        android:id="@+id/tv_item_doctor"
        style="@style/ItemMain"
        android:layout_weight="2"
        android:text="@string/header_recordchoose_Doctor" />

</LinearLayout>