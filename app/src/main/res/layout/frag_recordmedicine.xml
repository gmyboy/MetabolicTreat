<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_other"
        style="@style/EditTextStyle"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:hint="其他"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_full_doctor_tip"
        style="@style/TitleTextView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/et_other"
        android:text="医生:" />

    <TextView
        android:id="@+id/tv_full_doctor"
        style="@style/TitleTextView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/tv_full_doctor_tip"
        android:gravity="center"
        android:text="常宝" />

    <TextView
        android:id="@+id/tv_full_bingren_tip"
        style="@style/TitleTextView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tv_full_doctor"
        android:text="患者:" />

    <TextView
        android:id="@+id/tv_full_bingren"
        style="@style/TitleTextView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/tv_full_bingren_tip"
        android:gravity="center"
        android:text="常宝" />

    <Button
        android:id="@+id/btn_fragment_certain"
        style="@style/BottomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="确认" />

    <Button
        android:id="@+id/btn_fragment_back"
        style="@style/BottomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_fragment_certain"
        android:text="返回" />


    <LinearLayout
        android:id="@+id/ll_now3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_fragment_certain"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:background="@color/grey_line"
        android:orientation="vertical">

        <include layout="@layout/header_recordnow3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="达美康" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="30mg/片" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="餐前" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="头晕" />

        </LinearLayout>

        <View style="@style/LineHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="达美康" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="30mg/片" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="餐前" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="头晕" />

        </LinearLayout>

        <View style="@style/LineHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="达美康" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="30mg/片" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="餐前" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="头晕" />

        </LinearLayout>

        <View style="@style/LineHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="达美康" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="4"
                android:text="30mg/片" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3片/次" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="3次/日" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="3"
                android:text="餐前" />

            <TextView
                style="@style/ContentTextView"
                android:layout_weight="5"
                android:text="头晕" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemheight"
            android:orientation="horizontal">

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:id="@+id/spinner_now1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize"
                app:niceEntries="@array/medic_ywzl" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:id="@+id/spinner_now2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize"
                app:niceEntries="@array/medic_hxm" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:id="@+id/spinner_now3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize"
                app:niceEntries="@array/medic_mqyy" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize"
                app:niceEntries="@array/medic_gg" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="片/次"
                android:textSize="@dimen/spinnerTextSize" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize"
                app:niceEntries="@array/medic_cs" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize"
                app:niceEntries="@array/medic_ff" />

            <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/spinnerTextSize"
                app:niceEntries="@array/medic_blfy" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
