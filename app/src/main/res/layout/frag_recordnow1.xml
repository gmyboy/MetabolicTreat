<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_frag_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/content_margin_bottom"
        android:background="@color/grey_line"
        android:orientation="vertical">

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="血糖升高" />

            <LinearLayout style="@style/input_layout_in">

                <TextView
                    android:id="@+id/et_recordnow1_1_1"
                    style="@style/input_txt" />

                <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                    android:id="@+id/ns_recordnow1_1_2"
                    style="@style/input_spinner" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="FBG" />

            <LinearLayout style="@style/input_layout_in">

                <TextView
                    android:id="@+id/et_recordnow1_2"
                    style="@style/input_txt"
                    android:textSize="16sp" />

                <TextView
                    style="@style/input_txt_dost"
                    android:layout_weight="0.2"
                    android:text="-" />

                <TextView
                    android:id="@+id/et_recordnow1_2_2"
                    style="@style/input_txt"
                    android:textSize="16sp" />

                <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                    android:id="@+id/ns_recordnow1_2"
                    style="@style/input_spinner"
                    android:layout_weight="1.8"
                    android:textSize="15sp"
                    app:hideArrow="true"
                    app:niceEntries="@array/highestdost" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="PBG" />

            <LinearLayout style="@style/input_layout_in_nodimen">

                <TextView
                    android:id="@+id/et_recordnow1_3"
                    style="@style/input_txt"
                    android:textSize="16sp" />

                <TextView
                    style="@style/input_txt_dost"
                    android:layout_weight="0.2"
                    android:text="-" />

                <TextView
                    android:id="@+id/et_recordnow1_3_2"
                    style="@style/input_txt"
                    android:textSize="16sp" />

                <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                    android:id="@+id/ns_recordnow1_3"
                    style="@style/input_spinner"
                    android:layout_weight="1.8"
                    android:textSize="15sp"
                    app:hideArrow="true"
                    app:niceEntries="@array/highestdost" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineGreyHorizontal" />

        <LinearLayout style="@style/Style_Item_Layout">

            <TextView
                style="@style/input_txt_title"
                android:text="心慌饥饿感" />

            <LinearLayout style="@style/input_layout_in_null">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_4"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="低血糖" />

            <LinearLayout style="@style/input_layout_in_null">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_5"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="低血糖昏迷" />

            <LinearLayout style="@style/input_layout_in_null_nodimen">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_6"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineGreyHorizontal" />

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="酮症" />

            <LinearLayout style="@style/input_layout_in_null">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_7"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="酮症酸中毒" />

            <LinearLayout style="@style/input_layout_in_null">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_8"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="最高体重" />

            <LinearLayout style="@style/input_layout_in_nodimen">

                <TextView
                    android:id="@+id/et_recordnow1_9"
                    style="@style/input_txt" />

                <TextView
                    style="@style/input_txt_dost"
                    android:text="Kg" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineGreyHorizontal" />

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="视物模糊" />

            <LinearLayout style="@style/input_layout_in_null">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_10"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="泡沫尿" />

            <LinearLayout style="@style/input_layout_in_null">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_11"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="肢端麻木" />

            <LinearLayout style="@style/input_layout_in_null_nodimen">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_recordnow1_12"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
