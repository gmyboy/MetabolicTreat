                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_12"
                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_13"
                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_14"
                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_15"
                                style="@style/TableRowTextView" />
                        </TableRow>

