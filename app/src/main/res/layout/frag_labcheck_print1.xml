                        <LinearLayout
                            style="@style/input_layout_in_null"
                            android:layout_weight="2.5" />

                        <LinearLayout
                            style="@style/input_layout_in"
                            android:layout_weight="2.5">

                            <TextView
                                android:id="@+id/et_lab1_date1_1"
                                style="@style/input_txt"
                                android:hint="@string/hint_date" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/LineGreyHorizontal" />

                    <LinearLayout style="@style/input_layout_out">

                        <TextView
                            style="@style/input_txt_title"
                            android:text="FPG" />

                        <LinearLayout style="@style/input_layout_in">

                            <TextView
                                android:id="@+id/et_lab1_1"
                                style="@style/input_txt" />

                            <TextView
                                style="@style/input_txt_dost"
                                android:text="mmoI/L" />
                        </LinearLayout>

                        <TextView
                            style="@style/input_txt_title"
                            android:text="HbA1c" />

                        <LinearLayout style="@style/input_layout_in">

                            <TextView
                                android:id="@+id/et_lab1_2"
                                style="@style/input_txt" />

                            <TextView
                                style="@style/input_txt_dost"
                                android:text="%" />
                        </LinearLayout>

                        <TextView
                            style="@style/input_txt_title"
                            android:text="TG" />

                        <LinearLayout style="@style/input_layout_in_nodimen">

                            <TextView
                                android:id="@+id/et_lab1_3"
                                style="@style/input_txt" />

                            <TextView
                                style="@style/input_txt_dost"
                                android:text="mmoI/L" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/LineGreyHorizontal" />

                    <LinearLayout style="@style/input_layout_out">

                        <TextView
                            style="@style/input_txt_title"
                            android:text="TC" />

                        <LinearLayout style="@style/input_layout_in">

                            <TextView
                                android:id="@+id/et_lab1_4"
                                style="@style/input_txt" />

                            <TextView
                                style="@style/input_txt_dost"
                                android:text="mmoI/L" />
                        </LinearLayout>

                        <TextView
                            style="@style/input_txt_title"
                            android:text="LDL-C" />

                        <LinearLayout style="@style/input_layout_in">

                            <TextView
                                android:id="@+id/et_lab1_5"
                                style="@style/input_txt" />

                            <TextView
                                style="@style/input_txt_dost"
                                android:text="mmoI/L" />
                        </LinearLayout>

                        <TextView
                            style="@style/input_txt_title"
                            android:text="HDL-C" />

                        <LinearLayout style="@style/input_layout_in_nodimen">

                            <TextView
                                android:id="@+id/et_lab1_6"
                                style="@style/input_txt" />

                            <TextView
                                style="@style/input_txt_dost"
                                android:text="mmoI/L" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/LineGreyHorizontal" />

                    <LinearLayout style="@style/input_layout_out">

                        <TextView
                            style="@style/input_txt_title"
                            android:text="ALT" />

                        <LinearLayout style="@style/input_layout_in">

                            <TextView
