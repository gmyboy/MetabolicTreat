                            android:text="OGTT" />

                        <RadioGroup
                            style="@style/input_layout_in_null"
                            android:layout_weight="2.5"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="75g葡萄糖" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="二两馒头餐" />
                        </RadioGroup>

                        <LinearLayout
                            style="@style/input_layout_in"
                            android:layout_weight="2.5">

                            <TextView
                                android:id="@+id/et_lab1_date2_1"
                                style="@style/input_txt"
                                android:hint="@string/hint_date" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/LineGreyHorizontal" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TableRow>

                            <TextView style="@style/TableRowTextView" />

                            <TextView
                                style="@style/TableRowTextView"
                                android:text="0&apos;" />

                            <TextView
                                style="@style/TableRowTextView"
                                android:text="30&apos;" />

                            <TextView
                                style="@style/TableRowTextView"
                                android:text="60&apos;" />

                            <TextView
                                style="@style/TableRowTextView"
                                android:text="120&apos;" />

                            <TextView
                                style="@style/TableRowTextView"
                                android:text="180&apos;" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                style="@style/TableRowTextView"
                                android:text="血糖mmol/L" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_1"
                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_2"
                                style="@style/TableRowTextView" />

                            <TextView
