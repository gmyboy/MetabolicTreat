                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_8"
                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_9"
                                style="@style/TableRowTextView" />

                            <TextView
                                android:id="@+id/et_lab1_chart1_10"
                                style="@style/TableRowTextView" />
                        </TableRow>

