<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_rediagnosis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_frag_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/content_margin_bottom"
        android:background="@color/grey_line"
        android:orientation="vertical">

        <LinearLayout style="@style/input_layout_out">

            <LinearLayout style="@style/input_layout_in_null">

                <TextView
                    style="@style/input_txt_title"
                    android:text="甲状腺疾病复诊" />
            </LinearLayout>

            <LinearLayout
                style="@style/input_layout_in_null"
                android:layout_weight="6">

                <CheckBox
                    android:id="@+id/c_re2_1"
                    style="@style/ItemRecordTextView"
                    android:layout_weight="1.3"
                    android:text="甲亢复诊"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/c_re2_2"
                    style="@style/ItemRecordTextView"
                    android:layout_weight="2"
                    android:text="亚临床甲亢复诊"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/c_re2_3"
                    style="@style/ItemRecordTextView"
                    android:layout_weight="1.3"
                    android:text="甲减复诊"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/c_re2_4"
                    style="@style/ItemRecordTextView"
                    android:layout_weight="2"
                    android:text="亚临床甲减复诊"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/c_re2_5"
                    style="@style/ItemRecordTextView"
                    android:layout_weight="1.15"
                    android:text="HT复诊"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/c_re2_6"
                    style="@style/ItemRecordTextView"
                    android:layout_weight="2"
                    android:text="甲状腺结节复诊"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/LineGreyHorizontal" />

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="心悸多汗" />

            <LinearLayout style="@style/input_layout_in">

                <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                    android:id="@+id/ns_re2_1"
                    style="@style/input_spinner_full"
                    app:niceEntries="@array/DMfuzhen" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="体重下降" />

            <LinearLayout style="@style/input_layout_in_null">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_re2_2"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="体重增加" />

            <LinearLayout style="@style/input_layout_in_null_nodimen">

                <com.shwootide.metabolictreat.widget.ChangeButton
                    android:id="@+id/cb_re2_3"
                    style="@style/ChangeButton"
                    app:offText="无"
                    app:onText="有" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineGreyHorizontal" />

        <LinearLayout style="@style/input_layout_out">

            <TextView
                style="@style/input_txt_title"
                android:text="颈部增粗" />

            <LinearLayout style="@style/input_layout_in">

                <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                    android:id="@+id/ns_re2_4"
                    style="@style/input_spinner_full"
                    app:niceEntries="@array/DMfuzhen" />
            </LinearLayout>

            <TextView
                style="@style/input_txt_title"
                android:text="颈部疼痛" />

            <LinearLayout style="@style/input_layout_in">

                <com.shwootide.metabolictreat.widget.nicespinner.NiceSpinner
                    android:id="@+id/ns_re2_5"
                    style="@style/input_spinner_full"
                    app:niceEntries="@array/DMfuzhen" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
