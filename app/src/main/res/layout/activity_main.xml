<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tv_main_logo"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/marginleft"
        android:src="@mipmap/logo" />

    <View
        android:id="@+id/v_main_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_main_logo"
        android:background="@color/main_dark" />

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_main_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/marginleft"
        android:layout_marginRight="@dimen/marginright"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_main_new"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_common_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/btn_main_newrecord"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleTextSize" />

        <TextView
            android:id="@+id/tv_main_name_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/btn_main_new"
            android:text="姓名:" />

        <EditText
            android:id="@+id/et_main_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_main_name_tip"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleTextSize" />

        <TextView
            android:id="@+id/tv_main_sex_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/et_main_name"
            android:text="性别:" />

        <com.gmy.segmentedgroup.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sg_main_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_main_sex_tip"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_corner_radius="10dp">

            <RadioButton
                android:id="@+id/rb_main_man"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rb_main_woman"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="20sp" />
        </com.gmy.segmentedgroup.SegmentedGroup>

        <TextView
            android:id="@+id/tv_main_birthday_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/sg_main_sex"
            android:text="出生年月:" />

        <EditText
            android:id="@+id/tv_main_nian"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_main_birthday_tip"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleTextSize" />

        <TextView
            android:id="@+id/tv_main_nian_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/tv_main_nian"
            android:text="年" />

        <EditText
            android:id="@+id/tv_main_yue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_main_nian_tip"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleTextSize" />

        <TextView
            android:id="@+id/tv_main_yue_tip"
            style="@style/TitleTextView"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/tv_main_yue"
            android:text="月" />


        <Button
            android:id="@+id/btn_main_search"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_common_bg"
            android:padding="10dp"
            android:text="@string/btn_main_search"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleTextSize" />
    </RelativeLayout>

    <include layout="@layout/header_main" />

    <ListView
        android:id="@+id/lv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header_main"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/marginbottom"
        android:layout_marginLeft="@dimen/marginleft"
        android:layout_marginRight="@dimen/marginright"
        android:background="@color/grey_line" />

</RelativeLayout>
